<%= form_for(@cat) do |f| %>
  <% if @cat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cat.errors.count, "error") %> prohibited this cat from being saved:</h2>

      <ul>
      <% @cat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Mittens" %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.all, :id, :lastfirst, {prompt: "Select an owner"}, {class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :breed_id %><br>
    <%= f.collection_select :breed_id, Breed.all, :id, :breed, {prompt: "Select a breed"}, {class: "form-control"} %>
  </div>
  <div class="field">
    <%# TODO: Change to a datepicker once we learn that later %>
    <%= f.label "Date of Birth" %><br>
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.label :allergies %><br>
    <%= f.text_field :allergies, class: "form-control", placeholder: "catnip, wheat" %>
  </div>
  <div class="field">
    <%= f.label :vet_name %><br>
    <%= f.text_field :vet_name, class: "form-control", placeholder: "Dr. Doolittle" %>
  </div>
  <div class="field">
    <%= f.label :vet_phone %><br>
    <%= f.text_field :vet_phone, class: "form-control", placeholder: "504-555-1212" %>
  </div>
  <div class="field">
    <%= f.label :in_daycare %><br>
    <%= f.check_box :in_daycare %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
