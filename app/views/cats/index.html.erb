<p id="notice"><%= notice %></p>

<h1>Listing Cats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Breed</th>
      <th>Dob</th>
      <th>Allergies</th>
      <th>Vet name</th>
      <th>Vet phone</th>
      <th>In daycare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.name %></td>
        <td><%= cat.owner %></td>
        <td><%= cat.breed %></td>
        <td><%= cat.dob %></td>
        <td><%= cat.allergies %></td>
        <td><%= cat.vet_name %></td>
        <td><%= cat.vet_phone %></td>
        <td><%= cat.in_daycare %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

