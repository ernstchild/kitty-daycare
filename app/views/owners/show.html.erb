<h1>Owner Details</h1>
<h3><%= @owner.first_name %> <%= @owner.last_name %></h3>
<p>
  <strong>Phone:</strong>
  <%= @owner.phone %>
</p>

<p>
  <strong>Emergency name:</strong>
  <%= @owner.emergency_name %>
</p>

<p>
  <strong>Emergency phone:</strong>
  <%= @owner.emergency_phone %>
</p>

<h3><%= @owner.first_name %>'s Cats</h3>
<ul>
  <% @owner.cats.each do |cat| %>
    <li><%= link_to cat.name, cat_path %></li>
  <% end %>
</ul>

<%= link_to fa_icon("pencil", text: 'Edit'), edit_owner_path(@owner), class: "btn btn-primary" %>
<%= link_to 'Back', owners_path, class: "btn btn-default" %>
